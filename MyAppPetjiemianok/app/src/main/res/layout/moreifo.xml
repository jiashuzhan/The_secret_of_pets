<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_theme_yellow"
    android:orientation="vertical"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/user_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/yonghu"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:onClick="WorkerInformationHandler"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/hmid"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:text="17858263172"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            />
            <EditText
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@null"
                android:textSize="22dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/user_time" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:id="@+id/pets_notebook"
                android:background="@color/text_ad"
                android:onClick="petbookHandler"
                 />
                <ImageView
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:background="@drawable/a3"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="20dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:text="宠物备忘录"
                android:textSize="22dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="85dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:id="@+id/history_record"
                android:onClick="tuHandler"
                android:background="@color/text_ad" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/a4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="历史记录"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="85dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="155dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:id="@+id/product_manual"
                android:onClick="productHandler"
                android:background="@color/text_ad" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/a5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="产品说明"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="85dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="225dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:id="@+id/contactus"
                android:onClick="contactusHandler"
                android:background="@color/text_ad" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/a6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="联系我们"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="85dp"/>
        </RelativeLayout>

        <!--底部固定导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f4a460"
            android:gravity="center">

            <ImageButton
                android:id="@+id/driver_information"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="45dp"
                android:background="@android:color/transparent"
                android:onClick="driverInfoButtonHandler"
                android:scaleType="fitXY"
                android:src="@drawable/passenger_info_button" />

            <ImageButton
                android:id="@+id/manager_send_info"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="45dp"
                android:background="@android:color/transparent"
                android:onClick="returnhomeHandler"
                android:scaleType="fitXY"
                android:src="@drawable/returnhome_button" />

            <ImageButton

                android:id="@+id/company_report"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:onClick="transientHandler"
                android:scaleType="fitXY"
                android:src="@drawable/setting_unpress" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
